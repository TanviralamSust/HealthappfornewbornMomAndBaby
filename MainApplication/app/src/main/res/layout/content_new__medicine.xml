<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:text="Medicine Alarm"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/medicine"
                android:layout_width="380dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:hint="Name of the medicine"
                android:inputType="text"
                android:layout_marginTop="50dp"
                android:textColorHint="#000000"
                />

            <Button
                android:id="@+id/buttonSelectDate"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Starting Date"
                android:background="@drawable/button2"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"

                />

            <Button
                android:id="@+id/buttonSelectTime"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Starting Time"
                android:background="@drawable/button2"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"/>


            <Button
                android:id="@+id/SelectEndDate"
                android:layout_marginTop="40dp"
                android:textSize="15dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="endting Date"
                android:background="@drawable/button2"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/SelectEndTime"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="ending Time"
                android:background="@drawable/button2"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="Distance between each alarm?"
                    android:textColor="#000000"
                    android:layout_gravity="left"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/time_dis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="e.g. 6 hours"
                    android:inputType="number"
                    android:textColorHint="#000000"
                    />


            </LinearLayout>
            <Button
                android:id="@+id/submit_alarm"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="set alarm"
                android:background="@drawable/button2"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/view_alarm"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:layout_width="200dp"
                    android:onClick="viewAlaram"
                    android:layout_height="40dp"
                    android:text="show alarm time"
                    android:background="@drawable/button2"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#FFFFFF"
                    />
                <Button
                    android:id="@+id/back"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:onClick="backtomain"
                    android:text="back"
                    android:background="@drawable/button2"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>