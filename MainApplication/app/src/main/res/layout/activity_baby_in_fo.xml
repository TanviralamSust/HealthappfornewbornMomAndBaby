<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/baby_info1"
    tools:context="com.example.android.mainapplication.BabyfullFo.BabyInFo">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="18"
            >
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:text="Baby Fo"
                android:layout_gravity="center_horizontal|top"
                android:textColor="#273746"
                android:textStyle="italic|bold"/>
            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mother's care"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:onClick="mothercare"
                android:background="#ff9800"/>
            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Food Chart"
                android:layout_margin="20dp"
                android:onClick="foodchart"
                android:background="#ff9800"/>
            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="TIKA INFO"
                android:layout_weight="1"
                android:onClick="tikainfo"
                android:background="#ff9800"/>
            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Emergency Helpline"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:onClick="helpline"
                android:background="#ff9800"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
