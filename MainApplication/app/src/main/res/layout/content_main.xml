<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/theme"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Baby &amp; Mom Care"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#000000"
            android:textStyle="bold"/>


        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Babyfo"
            android:id="@+id/btncare"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="italic"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Medicine Alarm "
            android:id="@+id/medicine_alarm"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/button2"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="italic"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Tika Alarm"
            android:id="@+id/btntika"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="italic"
            android:background="@drawable/button2"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Weight Monitoring"
            android:id="@+id/btnabout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="italic"
            android:background="@drawable/button2"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Find health Centre"
            android:id="@+id/btnapi"
            android:background="@drawable/button2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="italic"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="ask a question"
            android:id="@+id/btnblog"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="@drawable/button2"
            android:layout_margin="10dp"
            android:textStyle="italic"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="smart chatbot"
            android:id="@+id/btnchatbot"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="@drawable/button2"
            android:layout_margin="10dp"
            android:textStyle="italic"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="easy navigation"
            android:id="@+id/btneasynavigation"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="@drawable/button2"
            android:layout_margin="10dp"
            android:textStyle="italic"/>

    </LinearLayout>
</RelativeLayout>
</ScrollView>